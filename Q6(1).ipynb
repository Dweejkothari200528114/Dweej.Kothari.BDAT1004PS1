   "source": [
    "vowels = ['a','e','i','o','u']\n",
    "def pig(w):\n",
    "\n",
    "    if w[0].lower() in vowels:\n",
    "        print(w.lower() + 'way')\n",
    "    else:\n",
    "        first_letter = w[0]\n",
    "        print(w[1:].lower()+first_letter.lower()+'ay')"
   ]
  },
